{
  "name": "front_v2",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "commit": "cz",
    "extract-icons": "pnpm run --filter @knockdog/icons extract-icons"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": "eslint --flag unstable_config_lookup_from_file",
    "*": "prettier --write --ignore-unknown",
    "./apps/knockdog/**/*.{ts,tsx}": "bash -c 'pnpm run --filter knockdog type-check'",
    "./packages/ui/**/*.{ts,tsx}": "bash -c 'pnpm run --filter @knockdog/ui type-check'"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@8.15.6",
  "dependencies": {
    "@types/react-lottie": "^1.2.10",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-lottie": "^1.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "commitizen": "^4.3.1",
    "cz-git": "^1.10.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  }
}
