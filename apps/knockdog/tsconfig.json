{
  "extends": "@knockdog/typescript-config/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "turbo/generators/config.ts"
  ],
  "exclude": ["node_modules", ".next", ".next/types"],
  "compilerOptions": {
    "skipLibCheck": true, // 라이브러리 체크 건너뛰기
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@views/*": ["views/*"],
      "@widgets/*": ["widgets/*"],
      "@features/*": ["features/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@stores/*": ["shared/store/*"],
      "@utils/*": ["shared/utils/*"],
      "@providers/*": ["app/providers/*"],
      "@constants/*": ["shared/constants/*"],
      "@bridgeStore": ["src/shared/store/useBridgeStore.ts"],
      "@type/*": ["./src/shared/types/*"],
      "react": ["../node_modules/@types/react"]
    }
  }
}
