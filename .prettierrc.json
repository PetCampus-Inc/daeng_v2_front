{
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindFunctions": ["clsx", "cn", "twmerge", "cva"],
  "tabWidth": 2,
  "singleQuote": true,
  "arrowParens": "always",
  "semi": true,
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "endOfLine": "lf",
  "proseWrap": "always",
  "bracketSpacing": true,
  "quoteProps": "as-needed"
}
